{
    "extends": "airbnb-base",
    "plugins": [
        "import"
    ],
    "rules":{
        "indent": [2, "tab"],
        "no-tabs": 0,
        "valid-jsdoc": ["error", {
        "requireReturn": true,
        "requireReturnType": true,
        "requireParamDescription": true,
        "requireReturnDescription": true
    }],
    "require-jsdoc": ["error", {
        "require": {
            "FunctionDeclaration": true,
            "MethodDefinition": true,
            "ClassDeclaration": true
        }
    }]
    },
 "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  }
}